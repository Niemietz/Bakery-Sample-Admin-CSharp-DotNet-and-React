<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"] - BakerySample</title>
        <link href="/css/site.css" rel="stylesheet">
    </head>
    <body class="brown lighten-5">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Edit Bakery Data</title>
            <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        </head>
        <nav class="brown lighten-1">
            <div class="nav-wrapper container">
                <a href="/" class="brand-logo">Your Bakery Admin</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="http://localhost:3000">View Site</a></li>
                </ul>
            </div>
        </nav>

        @RenderBody()

        <footer class="page-footer brown lighten-1" style="margin-top: 60px;">
            <div class="container center-align white-text">
                © @{ new DateTime().Year.ToString(); } Your Bakery Admin Panel
            </div>
        </footer>

        <!-- SweetAlert2 -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- Materialize -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>